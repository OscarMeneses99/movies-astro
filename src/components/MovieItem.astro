---
export interface Props {
  id: string;
  title: string;
  year: number;
  director: string;
  duration: number;
  poster: string;
  genre: string;
  rate: number;
  synopsis: string;
}

const { id, title, year, director, duration, poster, genre, rate, synopsis } =
  Astro.props;
---

<a
  class="hover:scale-105 inline-block transition-all hover:contrast-125 hover:shadow-2xl"
  href={`/${id}`}
>
  <img
    alt={`Portada de la pelicula ${title}`}
    class="object-cover aspect-[520/804] rounded"
    src={poster}
    style={`view-transition-name: movie-${id}`}
  />
</a>
